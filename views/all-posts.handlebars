{{!-- Renders link to the post on the Home Screen --}}

<ul class="list-group list-group-flush">
  {{#each posts as |post| }}
  <li class="list-group-item">
    <a href="/post/{{post.id}}">
      {{post.title}} Created On: {{post.createdAt}}
      {{!-- Created By: {{user.email}} --}}
    </a>
  </li>


  {{!-- add conditional rendering --}}
  {{#if loggedIn}}
  <ul>
    {{#each post.comments as |comment|}}
    <li>{{comment.body}}</li>
    {{/each}}
  </ul>
  {{else}}
  <a href="/login">login</a>
  {{/if}}
  {{/each}}
</ul>