<h1>Welcome!</h1>

{{#each posts as |post| }}
<div class="card">
  <div class="card-header">
    <h5 class="card-title">{{post.title}}</h5>
  </div>
  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
    <button class="deleteButton" data-id="{{post.id}}">Delete</button>
  </div>
  <ul>
    {{#each post.Comments as |comment|}}
    <li>{{comment.body}}</li>
    {{/each}}
  </ul>
</div>
{{/each}}

<form id="blogSection">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Blog Title</label>
    <input type="text" class="form-control" id="Title" aria-describedby="emailHelp">
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Blog Body</label>
    <textarea class="form-control" id="Body" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="card">
  <h2 class="card-header">Edit Post</h2>
  <form class="card-body" id="edit-post-form">
    <div>
      <label class="form-label">Title:</label>
      <input class="form-input" type="text" name="post-title" value="{{post.postTitle}}" />
    </div>

    <div>
      <label class="form-label">Content:</label>
      <textarea class="form-textarea form-input" name="post-body" data-number="8">{{post.postContent}}</textarea>
    </div>

    <button class="btn btn-primary" type="submit">EDIT</button>
    <input type="hidden" name="post-id" value="{{post.id}}" />
  </form>
  <div class="card-body">
    <button class="btn btn-primary" type="click" id="delete-btn">DELETE</button>
  </div>
</div>

<script src="/js/userPost.js"></script>
<script src="/js/updatepost.js"></script>